@model AdminQueryModel


@{
    ViewData["Title"] = "Public Stories";
}

<div class="row sec2">

    <form method="GET" class="headserach">
        <div class="searchtop">
            <label asp-for="SearchTerm"></label>
            <input asp-for="SearchTerm" />
        </div>


    </form>


    @if (!Model.Stories.Any())
    {
        <h2 class="titlepost">

            There are no stories yet.
        </h2>
    }
    else
    {
        @foreach (var sto in Model.Stories)
        {
            <a smooth="true" asp-controller="Admins" asp-action="DetailsStoryUser" asp-route-id="@sto.Id" class="wraplink">
                <article class="storypage">
                    <article class="contentpage">
                        <h1>@sto.Title</h1>
                        <p class="cut-text">
                            @sto.StoryText
                        </p>
                    </article>
                    <article class="btnslist2">


                        <a smooth="true" asp-controller="Admins" asp-action="DetailsStoryUser" asp-route-id="@sto.Id" class="btndet">Details</a>
                        <article class="btnfavbtn">
                            <form method="post">
                                <input smooth="true" asp-controller="Favourites" asp-action="Save" asp-route-id="@sto.Id" type="submit" value="Save" class="btnfav">
                            </form>
                        </article>




                    </article>
                </article>

            </a>
        }

    }


    @{
        var prevpage = Model.CurrentPage - 1;

        if (prevpage < 1)
        {
            prevpage = 1;
        }

        var maxpag = Math.Ceiling((double)Model.TotalStories / AdminQueryModel.StoriesPerPage);
    }


</div>

<div class="row pagiion">
    <div class="col-md-6">
        <a class="btn btn-info  @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
           asp-controller="Admins"
           asp-action="PublicStoriesUser"
           asp-route-currentPage="@prevpage"
           asp-route-searchTerm="@(Model.SearchTerm)">|<</a>
    </div>
    <div class="col-md-6">
        <a class="btn btn-info  @(Model.CurrentPage == maxpag  ? "disabled" : string.Empty)"
           asp-controller="Admins"
           asp-action="PublicStoriesUser"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-searchTerm="@(Model.SearchTerm)">>|</a>
    </div>
</div>
